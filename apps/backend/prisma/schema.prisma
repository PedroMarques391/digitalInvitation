// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id               String   @id @default(uuid())
  alias            String
  name             String
  password         String
  date             DateTime
  place            String
  description      String
  image            String
  backgroundIImage String
  publicExpected   Int
  guests           Guest[]

  @@map("events")
}

model Guest {
  id                 String  @id @default(uuid())
  name               String
  email              String
  isConfirmed        Boolean
  hasCompanions      Boolean
  numberOfCompanions Int
  event              Event?  @relation(fields: [eventId], references: [id])
  eventId            String?

  @@map("guests")
}
